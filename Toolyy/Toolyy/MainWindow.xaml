<Window x:Class="Toolyy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Toolyy"
        mc:Ignorable="d"
        xmlns:view="clr-namespace:Toolyy.View"
        Title="Tooly" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Button Content="Edit Tools" Command="{Binding AddWerkzeugViewCommand}"/>
            <Button Content="Manage Tools" Command="{Binding WerkzeugViewCommand}"/>
        </StackPanel>

        

    </Grid>
</Window>
